<h1>New Viewing Party</h1>

<%= form_tag viewing_parties_path do %>
  <p class="movie-title">Movie: <%= @movie.title %></p>

  <%= hidden_field_tag :movie_id, @movie.id %>

  <%= label_tag :duration, "Party duration (in minutes):" %>
  <%= number_field_tag :duration, @movie.runtime %> <br>

  <%= label_tag :date, "Date:" %>
  <%= date_field_tag :date %> <br>

  <%= label_tag :time, "Time:" %>
  <%= time_field_tag :time %> <br><br>

  <%= label_tag :friends, "Invite friends to your viewing party:" %> <br>
  <% if current_user.friends.empty? %>
    <p>No friends to invite to your viewing party.</p>
  <% else %>
    <div class='checkbox, friends'>
      <%= collection_check_boxes(:users, :id, current_user.friends, :id, :username, include_hidden: false) %>
    </div>
  <% end %> <br>

  <%= submit_tag "Create Party" %>
<% end %>
